name = Libra Theme
description = Libra Theme is a responsive Drupal 7 theme.
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[featured]       = 'Featured'
regions[main_top]       = 'Main Top'
regions[main_bottom]    = 'Main Bottom'
regions[navigation]     = 'Navigation'
regions[header_top]     = 'Top Black Bar'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[footer_first]   = 'First Bottom'
regions[footer_second]  = 'Second Bottom'
regions[footer_third]   = 'Third Bottom'
regions[footer_four]    = 'Four Bottom'


